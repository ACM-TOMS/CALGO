################################################################################
# Macro definitions
################################################################################

TOPLEVEL = ..
include ${TOPLEVEL}/Make.config  # Check for generic macros

CSRC = $(wildcard *.c)
OBJS  = $(notdir $(CSRC:.c=.o))

################################################################################
# Targets
################################################################################
all: lib

lib: ${OBJS}
	ar cvq ${LIBNAME} ${OBJS}; mv -i ${LIBNAME} ${PAMPACLIBDIR}

clean:
	rm -f ${OBJS} ${PAMPACLIBDIR}/${LIBNAME} 

################################################################################
