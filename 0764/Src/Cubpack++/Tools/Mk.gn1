CUBPACK = /home/ronald/Research/Cubpack++

MYTESTPROG = vb5.o

TARGET = tst

#########################################################

LIB_DIR=$(CUBPACK)/Src
INCLUDE_DIR=$(CUBPACK)/Src

CC  =   gcc

CFLAGS = -x c++ -I$(INCLUDE_DIR)

libdir =  -L$(LIB_DIR)
libs =  -lcubpack -lm -lg++

.c.o: ; $(CC) $(CFLAGS) -c  $*.c


$(TARGET):  $(MYTESTPROG)
	$(CC) $(MYTESTPROG) $(libdir) $(libs) -o $(TARGET)

clean:
	/bin/rm -f *.o $(TARGET) core
